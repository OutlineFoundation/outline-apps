{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "removeComments": false,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "target": "es2017",
        "lib": [
            "es2022"
        ],
        "baseUrl": "./",
        "rootDir": "./",
        "outDir": "./build"
    },
    "include": [
        "src",
        "scripts",
        "build.action.mjs",
        "start.action.mjs"
    ],
    "exclude": [
        "node_modules",
        "android",
        "ios",
        "www",
        "build",
        "dist",
        "*.cjs",
        "*.js",
        "*.mjs"
    ]
}
