// Outline template for android/settings.gradle.
// This replaces the file generated by `npx cap sync android`.
// Original source: <project>/android/settings.gradle produced by Capacitor CLI.
// Why: we need to include OutlineAndroidLib via includeBuild so our native module links correctly;
// this path is not preserved by Capacitor, so we reapply it here.

include ':app'
include ':capacitor-cordova-android-plugins'
project(':capacitor-cordova-android-plugins').projectDir = new File('./capacitor-cordova-android-plugins/')
includeBuild '__OUTLINE_ANDROID_LIB_PATH__'

apply from: 'capacitor.settings.gradle'

